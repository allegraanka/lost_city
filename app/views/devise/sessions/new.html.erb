<div class="sign-in hidden" id="sign-in">
  <div id="signInModal" class="show-modal modal">
    <h1> sign in </h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-input-container">
        <div class="form-input"> <%= f.input :email, required: true, autofocus: true, placeholder: 'e n t e r  e m a i l' %> </div>
        <div class="form-input"> <%= f.input :password, required: true, placeholder: 'e n t e r  p a s s w o r d' %> </div>
        <div class="form-input"> <%= f.input_field :remember_me, as: :boolean, boolean_style: :inline if devise_mapping.rememberable? %> </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "sign in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
