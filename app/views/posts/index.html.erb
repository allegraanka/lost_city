<h1> hi, <%= @current_user.user_name %> </h1>
<h3> your posts thread: </h3>

<div class="posts-wrapper row">

  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="username">
          <%= post.user.user_name %>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
      </div>
      <p class="caption">
        <%= post.caption %> <br />
      </p>
      <p class="caption">
        <%= "posted #{time_ago_in_words(post.created_at)}" %>
      </p>
    </div>
  <% end %>

</div>
