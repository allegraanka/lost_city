<section>
  <div class="bio-form">
    <%= simple_form_for @user do |f| %>
      <div class="bio-content">
        <%= f.text_field :bio, class: "bio-text-field" %>
      </div>
      <%= f.button :submit, value: "save changes" %>
    <% end %>

    <div class="text-center edit-links">
      <%= link_to "edit bio", edit_bio_path, method: :put, data: { confirm: "Are you sure you want to edit this content?" } %>
      |
      <%= link_to "cancel", posts_path %>
    </div>
  </div>
</section>
